/**index.wxss**/

.wx-swiper {
  height: 350rpx;
}

.wx-image {
  width: 100%;
  height: 100%;
}

.playlists {
  height: 200rpx;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
}

.playlists image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  justify-content: flex-start;
  align-items: center;
  flex-shrink: 0;
}

.playlists view {
  width: 100%;
  margin-right: 20rpx;
  justify-content: flex-start;
  align-items: center;
  padding: 28rpx 0;
  overflow: hidden;
}

.name {
  font-size: 28rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.creator {
  font-size: 20rpx;
  color: lightgray;
  display: block;
  line-height: 3;
}

.tags {
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: red;
  border: 2rpx solid red;
  border-radius: 3rpx;
  margin-right: 10rpx;
}
