/**index.wxss**/

.container {
  padding: 0 0;
}

.playlists {
  height: 200rpx;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
}

.playlists image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  justify-content: flex-start;
  align-items: center;
  flex-shrink: 0;
}

.playlists view {
  width: 100%;
  margin-right: 20rpx;
  justify-content: flex-start;
  align-items: center;
  padding: 28rpx 0;
}

.name {
  font-size: 28rpx;
  display: block;
}

.creator {
  font-size: 20rpx;
  color: lightgray;
  display: block;
  line-height: 3;
}

.tag {
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: red;
  border: 2rpx solid red;
  border-radius: 3rpx;
  line-height: 2;
  margin-right: 10rpx;
}

.copywriter {
  font-size: 24rpx;
  color: darkgray;
  overflow: hidden;
  display: inline-block;
  word-break: break-all;
  line-height: 36rpx;
}
