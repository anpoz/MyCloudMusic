/**index.wxss**/

.container {
  padding: 0 0;
}

.playlists {
  height: 200rpx;
  width: 100%;
  margin-bottom: 10rpx;
}

.playlists image {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 30rpx;
}

.playlists view {
  width: 100%;
  height: 100%;
  margin-right: 20rpx;
}

.name {
  font-size: 28rpx;
  display: block;
}

.creator {
  font-size: 20rpx;
  color: lightgray;
  display: block;
}

.tag {
  padding: 0 8rpx;
  font-size: 16rpx;
  color: red;
  border: 2rpx solid red;
  border-radius: 3rpx;
}

.copywriter {
  font-size: 24rpx;
  color: darkgray;
  padding-left: 10rpx;
  overflow: hidden;
}
