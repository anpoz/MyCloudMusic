<!--index.wxml-->
<view class="container">
  <swiper autoplay='true' class='wx-swiper' indicator-dots='true' interval='2000' circular='true'>
    <swiper-item wx:for='{{topPlaylists}}' wx:key='{{item.id}}' bindtap='playlistDetail' data-id='{{item.id}}'>
      <image lazy-load='true' class="wx-image" mode="aspectFill" src='{{item.coverImgUrl}}'></image>
    </swiper-item>
  </swiper>
  <view class='playlists' wx:for='{{playlists}}' wx:key='{{item.id}}' hover hover-class="view-item-hover" bindtap='playlistDetail' data-id='{{item.id}}'>
    <image lazy-load='true' mode='aspectFill' src='{{item.coverImgUrl}}'></image>
    <view>
      <label class='name'>{{item.name}}</label>
      <label class='creator'>by {{item.creator.nickname}}</label>
      <label class='copywriter'>
        <label class='tag'>{{item.tag}}</label>{{item.copywriter}}</label>
    </view>
  </view>
</view>