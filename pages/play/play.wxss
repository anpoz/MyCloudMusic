/* pages/play/play.wxss */

.cover {
  width: 100%;
  height: 100vw;
}

.control-process {
  display: flex;
  align-items: center;
}

.current-process, .total-process {
  flex-grow: 0;
  width: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: darkgray;
}

.control-process slider {
  flex-grow: 1;
}

.song-info {
  display: flex;
  width: 100%;
  height: 150rpx;
  overflow: hidden;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 50rpx 0;
}

.song-info text:nth-child(1) {
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-info text:nth-child(2) {
  font-size: 32rpx;
  color: darkgray;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-info text:nth-child(3) {
  font-size: 28rpx;
  color: darkgray;
  font-style: italic;
  padding: 0 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.controls {
  display: flex;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 80rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.control-left {
  max-height: 80%;
}

.control-center {
  max-height: 100%;
}

.control-right {
  max-height: 80%;
}

.total {
  font-size: 28rpx;
  color: darkgray;
  width: 100%;
  position: fixed;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
